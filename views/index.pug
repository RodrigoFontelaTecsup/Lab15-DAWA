doctype html
html
  head
    title Mi Aplicación
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
  body(class="bg-gray-100 font-sans p-4")
    div(class="container mx-auto")
      h1(class="text-4xl font-bold mb-4") Mi Aplicación
      h2(class="text-2xl font-semibold mb-2") Datos existentes
      ul(class="list-disc pl-6")
        each dato in datos
          li(class="mb-2")
            span(class="mr-2") #{dato.nombre}
            a(href=`/alumno/${dato.id}` class="text-blue-500 hover:underline mr-2") Ver Detalles
            form(action=`/editar/${dato.id}` method="GET" style="display: inline;")
              button(type="submit" class="bg-blue-500 hover:bg-blue-700 text-white py-1 px-2 rounded mr-2") Actualizar
            form(action=`/eliminar/${dato.id}` method="GET" style="display: inline;")
              button(type="submit" class="bg-red-500 hover:bg-red-700 text-white py-1 px-2 rounded") Eliminar
            if dato.materia !== null && dato.nota !== null
              p(class="mt-2") Materia: #{dato.materia}, Nota: #{dato.nota}
            else
              p(class="mt-2") Sin información de materia y nota
      h2(class="text-2xl font-semibold mt-4 mb-2") Agregar nuevo dato
      form(action="/crear" method="GET")
        button(type="submit" class="bg-green-500 hover:bg-green-700 text-white py-1 px-2 rounded") Agregar Nuevo Alumno
